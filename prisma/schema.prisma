datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // Set this in .env file
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  email String @unique
}

model CodeProject {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  language  String
  version   String
  source    String
  output    String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Meeting {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  jobType     String
  date        DateTime
  timeSlot    String
  participant String
  createdAt   DateTime @default(now())
}